# Dockerfile
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

# OS deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# 캐시 효율: 먼저 req만 복사 → 설치
COPY requirements.txt .
RUN pip install -r requirements.txt

# 그 다음 소스 복사
COPY . .

# 포트 (예: 8000)
EXPOSE 8000

# Flask 실행 커맨드(파일/포트에 맞게 수정)
# 예: app/main.py 안에서 if __name__ == "__main__": app.run(host="0.0.0.0", port=8000)
CMD ["python", "app/main.py"]